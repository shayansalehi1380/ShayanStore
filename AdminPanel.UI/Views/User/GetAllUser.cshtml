@using Domain.Entity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Domain.Entity.User>

@{
    List<User> users = ViewBag.Users;
}

<div class="row">
    <div class="col-12">
        <div class="card" style="margin: 15px 15px 0px 15px;">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">کاربران</a></li>
                </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                        <form asp-controller="User" asp-action="Create" method="post"
                              class="d-flex justify-content-start align-items-center" style="gap: 10px">
                            <div class="form-group">
                                <label for="exampleInputEmail1">نام کاربر</label>
                                <input type="text" class="form-control" name="name" id="exampleInputEmail1"
                                       placeholder="نام کاربر را وارد کنید">
                            </div>
                            <div style="padding-top: 15px">
                                <button type="submit" class="btn btn-primary">ثبت کاربر</button>
                            </div>
                        </form>
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">کاربران</h3>
                                <!-- Fixed spelling from "کابران" to "کاربران" (if that's what you intended) -->
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-0">
                                <table class="table table-striped">
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>نام کاربر</th>
                                        <th>نقش کاربر</th>
                                        <th>عملیات</th>
                                    </tr>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <th style="width: 10px">@user.Id</th>
                                            <th>@user.Name</th>
                                            <th>
                                                role
                                            </th>
                                            <th>
                                                <span class="badge badge-warning">ویرایش</span>
                                                <a class="badge badge-danger"
                                                   href="@Url.Action("Delete", "User", new { id = user.Id })">حذف</a>
                                            </th>
                                        </tr>
                                    }

                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div> <!-- Closing active tab-pane div -->
                </div> <!-- Closing tab-content div -->
            </div><!-- /.card-body -->
        </div> <!-- /.card -->
    </div><!-- /.col-12 -->
</div><!-- /.row -->  