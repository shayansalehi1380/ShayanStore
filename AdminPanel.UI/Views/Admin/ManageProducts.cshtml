@using Domain.Entity.Products
@{
  List<Product> products = ViewBag.Products;
}

@section link {

    <style>
        /* برای گردی کامل و افکت‌ها */
        .btn-primary.rounded-pill {
            border-radius: 50px !important;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-primary.rounded-pill:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                background-color: #5649c0 !important;
            }

            /* تنظیمات آیکون */
            .btn-primary.rounded-pill i {
                font-size: 1.1rem;
                margin-left: 5px; /* فاصله آیکون از متن در RTL */
            }
    </style>

}

<div class="row">
  <div class="col-12">
    <div class="card" style="margin: 15px 15px 0px 15px;">
      <div class="card-header p-2">
        <ul class="nav nav-pills">
          <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">محصولات</a></li>
        </ul>
      </div>
      <div class="card-body">
        <div class="tab-content">
          <div class="active tab-pane" id="activity">
                        <div class="d-flex justify-content-between align-items-center p-2 m-1">
                            <a href="@Url.Action("AddProduct","Admin")"
                               class="btn btn-primary rounded-pill px-4 d-flex align-items-center"
                               style="color: white; background-color: #6c5ce7; border: none; gap: 8px;">
                                <i class="fa fa-plus-circle"></i>
                                <span>افزودن کالا</span>
                            </a>
                        </div>
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">محصولات</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="جستجو">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                  <tr>
                    <th>#</th>
                    <th>نام محصول</th>
                    <th>کد</th>
                    <th>عملیات</th>
                  </tr>
                  @{
                    if (products.Any())
                    {
                      foreach (var p in products)
                      {
                        <tr>
                          <td>@p.Id</td>
                          <td>@p.FaTitle</td>
                          <td>@p.UniqueCode</td>
                          <td>
                            <div class="d-flex justify-content-center gap-3">
                              <a class="badge badge-warning">ویرایش</a>
                              <a class="badge badge-danger">حذف</a>
                            </div>
                          </td>
                        </tr>
                      }
                    }
                    else
                    {
                      <tr>
                        <td>0</td>
                        <td>موردی یافت نشد</td>
                        <td>-</td>
                        <td>-</td>
                      </tr>
                    }
                  }

                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

